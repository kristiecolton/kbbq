<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lifestyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_navy</item>
        <item name="colorPrimaryVariant">@color/dark_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_navy</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Lifestyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dark_button">
        <item name="backgroundTint">@color/dark_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="dark_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Lifestyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lifestyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>